bx64:
	g++ ../src/main.cpp ../src/glad.c -o x64/application64.exe -I ../dependencies/x64/include ../src/headefiles -L ../dependencies/x64/lib -lglfw3 -lgdi32 -lopengl32 -mwindows
bx86:
	g++ ../src/main.cpp ../src/glad.c -o x86/application32.exe -I ../dependencies/x86/include ../src/headefiles -L ../dependencies/x86/lib -lglfw3 -lgdi32 -lopengl32 -mwindows